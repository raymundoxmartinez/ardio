{
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build"],
    "compilerOptions": {
      "allowJs": false,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "src",
      "composite": true,
      "declaration": true,
      "esModuleInterop": true,
      "jsx": "react",
      "lib": ["es5", "es6", "es7", "es2017", "dom"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "resolveJsonModule": true,
      "rootDirs": ["src"],
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "strictNullChecks": true,
      "target": "es5"
    },
   
  }
  